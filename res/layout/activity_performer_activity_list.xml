<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_background" >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/title_background"
            android:src="@drawable/btn_return"
            android:text="返回" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/Front_Title"
            android:text="活动详情" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_base_margin"
            android:paddingTop="@dimen/list_base_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/front_edit_task" />

            <TextView
                android:id="@+id/tvActivityID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/background_grey"
                android:textSize="@dimen/front_edit_task" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_base_margin"
            android:paddingLeft="@dimen/list_base_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/front_edit_task"
                android:background="@color/background_grey"
                android:text="截止时间：" />

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_grey"
                android:textSize="@dimen/front_edit_task" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_base_margin"
            android:paddingLeft="@dimen/list_base_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_grey"
                android:textSize="@dimen/front_edit_task"
                android:text="活动内容：" />

            <TextView
                android:id="@+id/tvActivityContext"
                android:layout_width="match_parent"
                android:background="@color/background_grey"
                android:layout_height="wrap_content" 
           		android:textSize="@dimen/front_edit_task"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>