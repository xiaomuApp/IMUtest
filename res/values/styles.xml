<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
<!-- 主题字体的样式 -->
    <style name="Front_Title">
        <item name="android:textColor">@color/front_title</item>
        <item name="android:textSize">@dimen/front_topic</item>
    </style>
<!-- 任务列表项的字体 -->
    <style name="Front_TaskList_ListCell">
        <item name="android:textColor">@color/front_task_list</item>
        <item name="android:textSize">@dimen/front_task_list_cell</item>
    </style>
<!-- 编辑任务的字体样式 -->    
    <style name="Front_EditTask">
        <item name="android:textColor">@color/front_edit_task</item>
        <item name="android:textSize">@dimen/front_edit_task</item>
    </style>
<!-- 人员安排字体样式 -->    
    <style name="Front_PeopleArrange">
        <item name="android:textColor">@color/front_people_arrange</item>
        <item name="android:textSize">@dimen/front_people_arrange</item>
    </style>
</resources>
